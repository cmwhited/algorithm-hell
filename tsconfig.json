{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./lib",
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*", "lib/**/*", ".vscode/**/*"]
}
